// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  role     Role
  email    String
  password String
  username String
  Document Document[]
}

enum Role {
  admin
  creator
  guest
}

model Document {
  id       Int          @id @default(autoincrement())
  name     String
  type     DocumentType
  owner_id Int?
  user_id  Int
  user     User         @relation(fields: [user_id], references: [id])
}

enum DocumentType {
  folder
  file
}
